<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/app/inc/settings.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</head>
<body>
  <div id="loading" style="display: none;" class="fixed inset-0 flex items-center justify-center bg-gray-950 z-50">
    <div class="loader">
        <div class="progress-bar">
        <div class="progress"></div>
        </div>
    </div>
</div>
<script>
  $("#loading").show()
  setTimeout(()=>{
  $("#loading").fadeOut(500)

  },1000)
</script>
  <div class="flex flex-col min-h-[100dvh] bg-gradient-to-b from-gray-950 to-gray-950 text-white">
    <header class="bg-electric-violet px-4 lg:px-6 h-14 flex items-center justify-center bg-gray-800">

      <nav class="flex gap-4 sm:gap-6">
        <a class="text-sm font-medium hover:underline underline-offset-4 text-violet-200" href="dashboard" rel="ugc">
          Home
        </a>
        <a class="text-sm font-medium hover:underline underline-offset-4 text-violet-200" href="clients" rel="ugc">
          Clientes
        </a>
        <a class="text-sm font-medium hover:underline underline-offset-4 text-violet-200" href="requests" rel="ugc">
          Solicitações
        </a>
        <a class="text-sm font-medium hover:underline underline-offset-4 text-violet-200" href="./" rel="ugc">
          Sair
        </a>
      </nav>
    </header>
    <main class="flex-1 bg-gradient-to-b from-gray-800 to-gray-950">
      <section class="w-full pt-12 md:pt-24 lg:pt-4 text-white">
        <div class="container space-y-10 px-4 md:px-6">
          <div class="flex flex-col items-center justify-center space-y-4 text-center">
            <div class="space-y-2">
              <h1 class="text-3xl font-bold tracking-tighter sm:text-5xl">Configurações de Usuário</h1>
              <p class="max-w-[900px] text-violet-200 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed">
                Gerencie suas informações pessoais e de conta.
              </p>
            </div>
            <div class="rounded-lg border bg-white text-gray-900 shadow-lg w-full max-w-4xl" data-v0-t="card">
              <div class="flex flex-col space-y-1.5 p-6">
                <h3 class="whitespace-nowrap text-2xl font-semibold leading-none tracking-tight">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-5 h-5 mr-2"
                  >
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                  Informações Pessoais e de Conta
                </h3>
              </div>
              <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                  <div class="grid gap-2">
                    <label
                      class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                      for="name"
                    >
                      Nome
                    </label>
                    <input disabled
                      class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                      id="name"
                      value="{{requests.name}}"
                    />
                  </div>
                  <div class="grid gap-2">
                    <label
                      class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                      for="cpf"
                    >
                      CPF
                    </label>
                    <input disabled
                      class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                      id="cpf"
                      value="{{requests.document}}"
                    />
                  </div>
                  <div class="grid gap-2">
                    <label
                      class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                      for="company"
                    >
                      Nome da Empresa
                    </label>
                    <input disabled
                      class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                      id="company"
                      value="{{requests.company}}"
                    />
                  </div>
                  <div class="grid gap-2">
                    <label
                      class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                      for="balance"
                    >
                      Renda
                    </label>
                    <input disabled
                      class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                      id="balance"
                      disabled=""
                      value="{{requests.income}}"
                    />
                  </div>
                  <div class="grid gap-2">
                    <label
                      class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                      for="Email"
                    >
                      Email
                    </label>
                    <input disabled
                      class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                      id="email"
                      value="{{requests.mail}}"
                    />
                  </div>
                  
                  <div class="grid gap-2">
                    <label
                      class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
                      for="phone"
                    >
                      Telefone
                    </label>
                    <input disabled
                      class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                      id="phone"
                      type="text"
                      value="{{requests.phone}}"
                    />
                  </div>
                </div>
                
                  <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="whitespace-nowrap text-2xl font-semibold leading-none tracking-tight">
                      Documentos
                    </h3>
                  </div>
                  <div class="p-6" style="">
                    <div class="flex justify-around items-start">
                      <div class="flex flex-col ">
                        <h4 class="whitespace-nowrap text-xl font-semibold leading-none tracking-tight">
                          Frente
                        </h4>
                        <img src="{{images.front_document}}" onerror="this.onerror=null;this.src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQLCYC5ebxHUUA1vdA5PlLKNOC26M4terIXsg&s'" alt="Frente do Documento" style="width:350px;height:250px">
                      </div>
                      <div class="flex flex-col ">
                        <h4 class="whitespace-nowrap text-xl font-semibold leading-none tracking-tight">
                          Verso
                        </h4>
                        <img src="{{images.back_document}}" onerror="this.onerror=null;this.src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQLCYC5ebxHUUA1vdA5PlLKNOC26M4terIXsg&s'" alt="Verso do Documento" style="width:350px;height:250px">
                      </div>
                    </div>
                  </div>
                  <div class="flex items-center justify-center">
                    <button onclick="approve('{{requests.id}}')" style="background-color:#8753f4; color: #fff;margin-right:1vw;" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-violet/90 h-10 px-4 py-2">
                      Aprovar
                    </button>
                    <button onclick="reject('{{requests.id}}')" style="background-color:#18181b; color: #fff;" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
                      Rejeitar
                    </button>
                  </div>  
                </div>
              </div>
            </div>
          <footer class="bg-electric-violet text-white p-6 md:py-12 w-full flex justify-center">
            <div>Cloud Payments © 2024</div>
          </footer>
          </div>
        </div>
      </section>
      
    </main>

  </div>
  <script>
  async function approve(id){
    $("#loading").show()
    const approve = await fetch(`/api/approve/${id}`,{
      method:"POST",
      body:``
    })
    const response = await approve.json()
    if(!response.success) return alert(response.message)

    setTimeout(()=>{
      $("#loading").fadeOut(500)
      setTimeout(()=>{
        alert("Account approved")
        document.location.href = '/admin/requests'
      },500)

    },1000)
  }
  async function reject(id){
    $("#loading").show()
    const reject = await fetch(`/api/reject/${id}`,{
      method:"POST",
      body:``
    })
    const response = await reject.json()
    if(!response.success) return alert(response.message)

    setTimeout(()=>{
      $("#loading").fadeOut(500)
      setTimeout(()=>{
        alert("Account rejected")
        document.location.href = '/admin/requests'
      },500)

    },1000)
  }
</script>
</body>
</html>
